[core]
    editor = gvim -f
    excludesfile = ~/.gitignore
[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    re = checkout HEAD
    ch = cherry-pick
    cs = branch --contains
    unstage = reset --
[user]
    name = vlad
    email = sumskyi@gmail.com
[http]
    sslVerify = false
[branch "master"]
    rebase = true
[credential]
	helper = cache
[pull]
	rebase = true
[push]
	default = simple
